<section class="container">
    <form class="form edit-form font">
        <div class="form-group">
          <input class="form-input" type="text" id="edit-title" value="{{name}}" required/>
        </div>
      <div class="form-group">
        <input class="form-input" type="text" id="edit-description"  value="{{description}}" required/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary log" type="submit" id="updateButton">Update</button>
      </div>
      <div class="form-group">
        <button class="btn btn-primary log" type="submit" id="deleteButton">Delete</button>
      </div>
    </form>
</section>